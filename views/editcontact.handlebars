<html>
	<head>
		<title> Card Connect </title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="stylesheet" href="/css/newcontact.css">
		<script src="https://code.jquery.com/jquery-3.1.0.js"></script>
		<script>
			$(document).ready(function(){
				$('#change-pic').submit(function(){
					console.log('i was clicked');
					$('.header img').attr('src', '/images/placeholder.png');
				});
			});
		</script>
	</head>
	<body>
		<div class="top-bar">
			<h3 style="text-align: center;">Edit Card</h3>
			<a href="javascript:history.back()" class="cancel-button">Cancel</a>
		</div>
		<form class="new-contact" role="form" method="post" action="/existingcontact/{{data.fullName}}">
			<div class="header">
				<img src="/images/{{data.image}}">
				<input type="text" class="full-name" name="name" value="{{data.fullName}}">
			</div>
			<!-- <a href="../newpicture">Change contact picture</a> -->
			<div class="body">
				<div class="input-field">
					<img src="/images/icon-call.svg">
					<input type="text" class="edit" name="phone" value="{{data.phone}}">
				</div><br>

				<div class="input-field">
					<img src="/images/icon-company.svg">
					<input type="text" class="edit" name="company" value="{{data.company}}">
				</div><br>

				<div class="input-field">
					<img src="/images/icon-globe.svg">
					<input type="text" class="edit" name="website" value="{{data.website}}">
				</div><br>

				<div class="input-field">
					<img src="/images/icon-mail.svg">
					<input type="text" class="edit" name="email" value="{{data.email}}">
				</div><br>

				<div class="input-field">
					<img src="/images/icon-home.svg">
					<input type="text" class="edit" name="address" value="{{data.address}}">
				</div><br>

				<input class="done-button" type="submit" value="Done">
				
				<a href="/deletecontact/{{data.fullName}}" class="delete-button">Delete</a>
			</div>
		</form>
	</body>
</html>
